# AetherionBot Configuration
# Copy this file to .env and fill in your actual values

# ===== TELEGRAM CONFIGURATION =====
# Get your bot token from https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Get your chat ID by messaging your bot and checking logs
TELEGRAM_CHAT_ID=your_chat_id_here

# ===== API CONFIGURATION =====
# Backend server configuration
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=true

# ===== FRONTEND CONFIGURATION =====
# Dashboard server configuration
DASHBOARD_HOST=localhost
DASHBOARD_PORT=5173

# ===== SECURITY CONFIGURATION =====
# JWT Secret for authentication (generate a strong random string)
JWT_SECRET_KEY=your_jwt_secret_here
# Encryption key for sensitive data (generate a strong random string)
ENCRYPTION_KEY=your_encryption_key_here

# ===== DATABASE CONFIGURATION =====
# Database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aetherionbot
DB_USER=aetherionbot_user
DB_PASSWORD=your_database_password

# ===== THREAT DETECTION CONFIGURATION =====
# Threat analysis settings
THREAT_DETECTION_ENABLED=true
THREAT_SAMPLING_RATE=1.0
THREAT_LOG_LEVEL=INFO

# ===== WEBSOCKET CONFIGURATION =====
# Real-time communication settings
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# ===== EXTERNAL SERVICES =====
# Optional integrations
SLACK_WEBHOOK_URL=your_slack_webhook_here
DISCORD_WEBHOOK_URL=your_discord_webhook_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_USERNAME=your_email_here
EMAIL_PASSWORD=your_app_password_here
